{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "keyofStringsOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "include": "./lib",
    "exclude": ["./node_modules/**/*"],
    "module": "commonjs",
    "target": "es6",
    "includeDeclarations": true,
    "theme": "markdown",
    "readme": "none"
  }
}